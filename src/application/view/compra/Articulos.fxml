<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.compra.ArticulosController">
   <children>
      <Pane prefHeight="400.0" prefWidth="600.0">
         <children>
            <AnchorPane prefHeight="400.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label text="Articulos" />
                        <TableView fx:id="articuloTableView" pickOnBounds="false" prefHeight="233.0" prefWidth="600.0">
                          <columns>
                            <TableColumn fx:id="marcaTableColumn" prefWidth="75.0" text="Marca" />
                            <TableColumn fx:id="modeloTableColumn" prefWidth="75.0" text="Modelo" />
                              <TableColumn fx:id="descripcionTableColumn" prefWidth="75.0" text="Descripción" />
                              <TableColumn fx:id="categoriaTableColumn" prefWidth="90.0" text="Categoría" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER" prefHeight="152.0" prefWidth="600.0" spacing="10.0">
                           <children>
                              <Button fx:id="buttonNew" alignment="CENTER" mnemonicParsing="false" onAction="#handleNew" text="Nuevo Artículo" />
                              <Button fx:id="buttonUpdate" alignment="CENTER" mnemonicParsing="false" onAction="#handleUpdate" text="Editar Artículo" />
                              <Button fx:id="buttonDelete" alignment="CENTER" mnemonicParsing="false" onAction="#handleDelete" text="Eliminar Artículo" />
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets top="30.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </Pane>
   </children>
</AnchorPane>
